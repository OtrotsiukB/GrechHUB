<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ic_iconCategory"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mobile_map_gps_position" />

    <TextView
        android:id="@+id/tv_titleCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="text"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/ic_iconCategory"
        app:layout_constraintStart_toEndOf="@+id/ic_iconCategory"
        app:layout_constraintTop_toTopOf="@+id/ic_iconCategory" />
</androidx.constraintlayout.widget.ConstraintLayout>
